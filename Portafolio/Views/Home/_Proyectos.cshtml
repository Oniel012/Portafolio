@using Portafolio.Models
@model IEnumerable<ProyectDto>

@if(Model is not null){

    <div class="text-center" style="padding-top: 6rem">
        <H1>Algunos de mis trabajos recientes</H1>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach(var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.ImgUrl" class="card-img-top" alt="Imagen de proyecto"/>
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@item.link" target="_blank">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    
}